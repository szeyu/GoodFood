<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Light grey color for shadow -->
            <corners android:radius="8dp" /> <!-- Optional: rounded corners -->
        </shape>
    </item>

    <!-- Main Box Layer -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#808080" /> <!-- Grey color for the box -->
            <corners android:radius="8dp" /> <!-- Optional: rounded corners -->
        </shape>
    </item>
</layer-list>
